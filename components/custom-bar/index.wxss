.tabBar {
  box-sizing: border-box;
  padding: 0 40rpx 40rpx;
  width: 100%;
  position: fixed;
  bottom: 0;
  background: #FFFFFF;
  z-index: 1000;
}
.cont {
  display: flex;
  justify-content: space-around;
}
.cont .item {
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  padding: 20rpx 14rpx;
}
.cont .item.top {
  position: relative;
}
.cont .item.top .icon-big-container {
  position: absolute;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 120rpx;
  height: 120rpx;
  top: -34rpx;
  border-radius: 50%;
  background: #FFFFFF;
}
.cont .item.top .ico-big {
  width: 70rpx;
  height: 70rpx;
}
.cont .item.top .ico {
  visibility: hidden;
}
.cont .item .ico {
  width: 50rpx;
  height: 50rpx;
}
.cont .item .txt {
  margin-top: 15rpx;
  font-size: 24rpx;
  z-index: 1;
}
